    <script>
        // Função para rolagem suave para uma seção
        function scrollToSection(id) {
            // Remove 'href' para evitar conflito com 'onclick'
            event.preventDefault(); 
            const element = document.getElementById(id);
            if (element) {
                element.scrollIntoView({ behavior: 'smooth' });
            }
        }

        // Função para lidar com o clique no gráfico de barras
        function handleChartClick(event) {
            const chart = Chart.getChart('barChart');
            if (!chart) return;

            // Usa o método do Chart.js para encontrar o elemento clicado
            const elements = chart.getElementsAtEventForMode(event, 'nearest', { intersect: true }, true);
            
            if (elements.length > 0) {
                const firstElement = elements[0];
                const index = firstElement.index;

                let targetId = 'modulo'; // Padrão: rolar para a seção de módulos

                // Mapeamento dos índices do gráfico de barras para os IDs dos Cards de Módulo
                // Indices: 0: Phishing, 1: Vazamento, 2: Pix/Boleto, 3: Ransomware
                if (index === 0 || index === 2 || index === 3) {
                    // Phishing, Pix/Boleto e Ransomware levam a Dicas de Proteção
                    targetId = 'card-protecao';
                } else if (index === 1) {
                    // Vazamento de Dados e Privacidade levam a Dados Pessoais
                    targetId = 'card-dados-pessoais';
                }
                
                // Chama a função de rolagem suave
                scrollToSection(targetId);
            }
        }

        // Dados e Inicialização dos Gráficos
        const CHART_COLORS = {
            red: 'rgb(239, 68, 68)',       
            blue: 'rgb(59, 130, 246)',    
            yellow: 'rgb(250, 204, 21)',  
            green: 'rgb(16, 185, 129)',   
        };

        const mockData = {
            golpes: {
                labels: ['Phishing (Engenharia Social)', 'Vazamento de Dados', 'Fraude Pix / Boleto', 'Ransomware / Ataques Servidor'],
                data: [640, 150, 60, 40],
                backgroundColor: [CHART_COLORS.red, CHART_COLORS.blue, CHART_COLORS.yellow, CHART_COLORS.green],
                borderColor: [CHART_COLORS.red, CHART_COLORS.blue, CHART_COLORS.yellow, CHART_COLORS.green],
            },
            evolucao: {
                labels: ['Jan', 'Fev', 'Mar', 'Abr', 'Mai', 'Jun'],
                data: [1200, 1400, 1500, 1600, 1700, 1500], 
            },
            vitimasIdade: {
                labels: ['18-35 anos', '36-55 anos', '56-70 anos', 'Mais de 70 anos'],
                data: [30, 45, 15, 10], 
                backgroundColor: [CHART_COLORS.blue, CHART_COLORS.red, CHART_COLORS.green, CHART_COLORS.yellow],
            }
        };

        let chartsInitialized = false;
        let barChartInstance; // Variável para armazenar a instância do gráfico de barras

        function initializeCharts() {
            if (chartsInitialized) return; 
            
            // Gráfico de Barras (Tipos de Golpes)
            const barCtx = document.getElementById('barChart');
            if (barCtx) {
                barChartInstance = new Chart(barCtx, {
                    type: 'bar',
                    data: {
                        labels: mockData.golpes.labels,
                        datasets: [{
                            label: 'Número de Ocorrências (Simulado)',
                            data: mockData.golpes.data,
                            backgroundColor: mockData.golpes.backgroundColor,
                            borderColor: mockData.golpes.borderColor,
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: { y: { beginAtZero: true } },
                        plugins: { legend: { display: false } },
                        // Importante: onClick é configurado aqui para usar a instância do gráfico
                        onClick: (event) => {
                            const elements = barChartInstance.getElementsAtEventForMode(event, 'nearest', { intersect: true }, true);
                            if (elements.length > 0) {
                                const firstElement = elements[0];
                                const index = firstElement.index;
                                let targetId = 'modulo';
                                if (index === 0 || index === 2 || index === 3) {
                                    targetId = 'card-protecao';
                                } else if (index === 1) {
                                    targetId = 'card-dados-pessoais';
                                }
                                scrollToSection(targetId);
                            }
                        }
                    }
                });
            }

            // Gráfico de Linha (Evolução Mensal)
            const lineCtx = document.getElementById('lineChart');
            if (lineCtx) {
                new Chart(lineCtx, {
                    type: 'line',
                    data: {
                        labels: mockData.evolucao.labels,
                        datasets: [{
                            label: 'Notificações por Mês',
                            data: mockData.evolucao.data,
                            backgroundColor: CHART_COLORS.red + '40',
                            borderColor: CHART_COLORS.red,
                            borderWidth: 2,
                            fill: true,
                            tension: 0.3
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: { y: { beginAtZero: true } },
                        plugins: { tooltip: { mode: 'index', intersect: false } }
                    }
                });
            }

            // Gráfico de Rosca (Distribuição Etária)
            const doughnutCtx = document.getElementById('doughnutChart');
            if(doughnutCtx) {
                new Chart(doughnutCtx, {
                    type: 'doughnut',
                    data: {
                        labels: mockData.vitimasIdade.labels,
                        datasets: [{
                            label: 'Proporção de Vítimas',
                            data: mockData.vitimasIdade.data,
                            backgroundColor: mockData.vitimasIdade.backgroundColor,
                            hoverOffset: 4
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: { legend: { position: 'bottom' } }
                    }
                });
            }
            
            chartsInitialized = true;
        }
        
        // Garante que os gráficos sejam inicializados após o DOM estar pronto
        window.addEventListener('load', initializeCharts); 
    </script>
</body>
</html>
